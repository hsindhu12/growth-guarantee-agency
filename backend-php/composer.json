{
    "name": "icona/backend-php",
    "description": "PHP Backend API for ICONA website",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "firebase/php-jwt": "^6.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "migrate": "php migrations/migrate.php",
        "sample-data": "php migrations/load-sample-data.php",
        "setup-pages": "php migrations/migrate.php && mysql -h$DB_HOST -u$DB_USER -p$DB_PASSWORD $DB_NAME < migrations/003_pages_table.sql"
    }
}